{
  "name": "node-test-sample",
  "version": "0.1.0",
  "description": "Sample for Node.js unit and integration testing",
  "repository": {
    "type": "git",
    "url": "https://github.com/arifsetiawan/node-test-sample.git"
  },
  "main": "app.js",
  "keywords": [
    "nodejs",
    "node",
    "base",
    "template",
    "app",
    "bootstrap",
    "test",
    "tdd",
    "unit",
    "integration"
  ],
  "contributors": [
    {
      "name": "Nurul Arif Setiawan",
      "email": "arif@dycode.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arifsetiawan/node-test-sample/issues"
  },
  "scripts": {
    "jscs": "jscs .",
    "start": "DEBUG=app NODE_ENV=development nodemon --ext \".js|.css|.html\" app.js",
    "debug": "DEBUG=app NODE_ENV=development node-debug app.js",
    "unit": "DEBUG=test NODE_ENV=test node_modules/mocha/bin/mocha test/unit/**/*.js",
    "test": "DEBUG=test NODE_ENV=test node_modules/mocha/bin/mocha test/unit/**/*.js",
    "integration": "DEBUG=test NODE_ENV=test node_modules/mocha/bin/mocha --reporter spec --timeout 10000 test/integration/**/*.js"
  },
  "dependencies": {
    "bcryptjs": "~2.3.0",
    "bluebird": "^3.0.5",
    "body-parser": "~1.14.1",
    "connect-flash": "~0.1.1",
    "connect-mongo": "^1.1.0",
    "cookie-parser": "~1.4.0",
    "debug": "^2.2.0",
    "express": "~4.13.3",
    "express-session": "~1.12.1",
    "formidable": "~1.0.17",
    "fs-extra": "^0.26.2",
    "i18n": "^0.5.0",
    "include-all": "~0.1.6",
    "lodash": "~3.10.1",
    "moment": "~2.10.6",
    "mongoose": "^4.3.7",
    "morgan": "~1.6.1",
    "nodemailer": "~1.10.0",
    "nodemailer-html-to-text": "~1.0.2",
    "passport": "~0.3.2",
    "passport-local": "~1.0.0",
    "sails-build-dictionary": "~0.10.1",
    "swig": "~1.4.2"
  },
  "devDependencies": {
    "git-validate": "^2.1.4",
    "mocha": "^2.4.4",
    "supertest": "^1.1.0"
  },
  "pre-commit": [
    "jscs",
    "unit",
    "integration"
  ]
}